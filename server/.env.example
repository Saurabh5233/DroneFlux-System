# Database
# MONGO_URI=mongodb://localhost:27017/droneflux
# OR for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/droneflux

# JWT Secret (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# Google OAuth (get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External API Key (for Frontend2 e-commerce orders)
EXTERNAL_API_KEY=a1b2c3d4-e5f6-7890-1234-567890abcdef

# CORS Origins (comma-separated list of allowed origins)
#CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://10.209.28.147:8080

# Server Port (optional, defaults to 3001)
PORT=3001

# Node Environment
NODE_ENV=development
